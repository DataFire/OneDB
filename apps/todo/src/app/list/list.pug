.form-group
  input.form-control.form-control-lg([(ngModel)]="list.title")
.item(*ngFor="let item of list.items")
  h4
    i.fa.fa-left([class.fa-square-o]="!item.done", [class.fa-check-square]="item.done")
    input.form-control([(ngModel)]="item.title")
.form-group
  a.btn.btn-secondary((click)="list.items.push(newItem())") Add a new item
.form-group
  a.btn.btn-primary((click)="save()") Save

log-in-modal(#logInModal)
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container
    a.navbar-brand(routerLink="/") Open To-Do
    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent")
    .collapse.navbar-collapse#navbarSupportedContent
      ul.navbar-nav.ml-auto
        li
          a.nav-link((click)="logInModal.open()")
            i.fa.fa-left.fa-users
            span([ngSwitch]="!!freedb.client.hosts.primary.user")
              span(*ngSwitchCase="true")
                span {{freedb.client.hosts.primary.displayName}}
              span(*ngSwitchCase="false") Sign In


div(*ngIf="namespace")
  h1 {{ namespace._id }}
  p Below is all your data in the {{ namespace._id }} space
.space(*ngFor="let datum of data")
  h2 {{ datum.type }}
  .item(*ngFor="let item of datum.dataset")
    a([routerLink]="['/data', namespace._id, datum.type, item._id]")
      span {{ item._id }}
    span(*ngIf="item.title")  - {{ item.title }}

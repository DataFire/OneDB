{
  "name": "angular4-template",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bobby-brennan/angular4-template.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 3000 --host 0.0.0.0",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:static",
    "build:gh-pages": "npm run build && rm -rf ./docs && cp -r ./dist/browser ./docs",
    "build:client": "ng build browser --prod",
    "build:server": "ng run browser:server",
    "build:static": "npm run build:client && npm run build:server && npm run webpack:server",
    "build:prerender": "npm run build:client && npm run build:server && npm run webpack:server && npm run prerender",
    "build:dynamic": "npm run build:client && npm run build:server && npm run webpack:server",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors --mode development",
    "prerender": "cd dist && node prerender",
    "serve:static": "cd dist/browser && http-server",
    "serve:dynamic": "node dist/server",
    "postinstall": "node ./ng-add-pug-loader.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/platform-server": "^6.1.0",
    "@angular/router": "^6.1.0",
    "@ng-bootstrap/ng-bootstrap": "^2.2.0",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "bootstrap": "^4.1.3",
    "core-js": "^2.4.1",
    "express": "^4.16.3",
    "marked": "^0.4.0",
    "ng-cli-pug-loader": "^0.1.3",
    "ngx-markdown": "^6.1.0",
    "rxjs": "^6.2.2",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@angular/cli": "^6.1.1",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/node": "^10.5.3",
    "apply-loader": "^2.0.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cpy-cli": "^1.0.1",
    "font-awesome": "^4.7.0",
    "http-server": "^0.10.0",
    "jquery": "^3.5.0",
    "json-loader": "^0.5.7",
    "markdown-loader": "^2.0.1",
    "onedb-client": "0.0.3",
    "pug": "^2.0.3",
    "pug-html-loader": "^1.1.5",
    "pug-loader": "^2.4.0",
    "pug-plugin-ng": "0.0.2",
    "reflect-metadata": "^0.1.10",
    "ts-loader": "^4.4.2",
    "typescript": "^2.9.2",
    "webpack-cli": "^3.1.0"
  }
}
